<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/actionbar_color"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:background="@color/actionbar_color">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:src="@drawable/ic_user"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Добавление аккаунта"
                android:textColor="@color/main_text_color"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/dialogChangeTreatmentButtonCancel"
                android:padding="11dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:src="@drawable/ic_cross_n_v"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войдите в Ваш аккаунт в этом окне браузера:"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/main_text_color"/>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dialogAddAccountWebView"/>

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_weight="0"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/iha_bot" />
    </LinearLayout>

</ScrollView>