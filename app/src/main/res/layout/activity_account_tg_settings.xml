<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:background="@color/actionbar_color">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:padding="13dp"
            android:rotation="0"
            android:id="@+id/tg_account_back_button"
            android:src="@drawable/ic_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Настройки аккаунта Telegram"
            android:textColor="@color/main_text_color"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/activityAccountSettingsImageViewAvatar"
                        android:src="@drawable/example_avatar"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mask_round"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activityAccountSettingsTextViewName"
                        android:text="Аккаунт без имени"
                        android:textSize="20sp"
                        android:textColor="@color/main_text_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activityAccountSettingsTextViewStatus"
                        android:text="Статус неизвестен"
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Принято сообщений: "
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/main_text_color"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Н/Д"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:id="@+id/activityAccountSettingsTextViewReceivedMessages"
                    android:textColor="@color/main_text_color"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отправлено сообщений: "
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/main_text_color"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Н/Д"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:id="@+id/activityAccountSettingsTextViewSentMessages"
                    android:textColor="@color/main_text_color"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отправлено запросов к API: "
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/main_text_color"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Н/Д"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:id="@+id/activityAccountSettingsTextViewSentRequests"
                    android:textColor="@color/main_text_color"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ошибок при доступе к API: "
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/main_text_color"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Н/Д"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:id="@+id/activityAccountSettingsTextViewApiErrors"
                    android:textColor="@color/main_text_color"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_text_color"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/tg_account_enabled_button"
                android:padding="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_power"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Состояние"
                        android:textSize="16sp"
                        android:textColor="@color/main_text_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Бота на аккаунте можно выключить, не удаляя аккаунт из списка. Выключенный аккаунт не используется вообще ни для каких запросов."
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вкл"
                    android:textSize="18sp"
                    android:textColor="@color/green_enabled"
                    android:id="@+id/tg_account_enabled_label"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/tg_account_chatenabled_button"
                android:padding="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_chat"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Отвечать в беседах"
                        android:textSize="16sp"
                        android:textColor="@color/main_text_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Если отключить это, бот будет отвечать, только когда ему пишут лично и будет игнорировать сообщения в беседах.
Очень часто в беседах собирают несколько ботов и они там флудят, поэтому если у тебя отключено обращение, работу в беседах лучше выключить."
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вкл"
                    android:textSize="18sp"
                    android:textColor="@color/green_enabled"
                    android:id="@+id/tg_account_chatenabled_label"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/tg_account_broadcaststatus_button"
                android:padding="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_broadcast"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Транслировать статус"
                        android:textSize="16sp"
                        android:textColor="@color/main_text_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Периодически обновлять статус страницы. Статус обновляется примерно раз в 5 минут. Обновляемый статус с временем поможет пользователю понять, что бот действительно работает и ему можно писать."
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вкл"
                    android:textSize="18sp"
                    android:textColor="@color/green_enabled"
                    android:id="@+id/tg_account_broadcaststatus_label"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_text_color"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


