<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введи сообщение и нажми Отправить"
            android:id="@+id/dialog_send_message_to_bot_label_result"
            android:textColor="@color/main_text_color"
            android:textSize="14sp"
            android:paddingBottom="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@android:style/Theme.Holo"
            android:hint="Введи сообщение"
            android:id="@+id/dialog_send_message_to_bot_field_message"
            android:textColor="@color/main_text_color"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_send_message_to_bot_button_close"
                android:layout_alignParentStart="true"
                android:background="@color/button_background"
                android:textColor="@color/main_text_color"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Закрыть"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_send_message_to_bot_button_send"
                android:layout_alignParentEnd="true"
                android:background="@color/button_background"
                android:textColor="@color/main_text_color"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Отправить"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>